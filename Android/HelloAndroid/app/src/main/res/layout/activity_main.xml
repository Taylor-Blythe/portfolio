<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:text="Hello Android"
        android:textColor="#FF0000"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/QuestionTextView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="37dp"
        android:text="Hello, what is your name?"
        android:textSize="20dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/userInputEditTextText"
        app:layout_constraintStart_toStartOf="@+id/enterButton" />

    <Button
        android:id="@+id/enterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="235dp"
        android:layout_marginEnd="14dp"
        android:backgroundTint="#00FF00"
        android:onClick="sayHello"
        android:text="Enter"
        app:layout_constraintEnd_toStartOf="@+id/userInputEditTextText"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/userInputEditTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@+id/enterButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/OutputTextView4"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="91dp"
        app:layout_constraintStart_toStartOf="@+id/userInputEditTextText"
        app:layout_constraintTop_toBottomOf="@+id/enterButton" />
</androidx.constraintlayout.widget.ConstraintLayout>